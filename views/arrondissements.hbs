<section class='wholepage'>
        <h1>{{cards.0.arrond}} </h1>

        <header>
                <div>
                        <a id="prev-page" class="button" href="/arrond/{{previous}}">Previous arr.</a>
                        <a id="next-page" class="button" href="/arrond/{{next}}">Next arr.</a>
                </div>
        </header>

        <section class='container'>
                {{#each cards}}
                <div class='card'>
                        <img src="{{this.image}}" />

                        <div class='card-text'>
                        <p>{{this.title}}</p>

                        {{#if this.author}}
                        <p>Added by: {{this.author.username}}</p>
                        {{/if}}
                        </div>
                        <a href='/arrond/{{this.arrond}}/{{this._id}}' class='info'>See more info</a>
                </div>
                {{/each}}
        </section>
</section>
