<h1>Update <i>'{{cardToEdit.title}}'</i></h1>

<form action='/profile/{{cardToEdit._id}}/update' method='post' class='update-form' enctype="multipart/form-data">
    <label for='title' class='label'>Title:</label>
    <input class='update-input' id='title' name='title' type='text' value='{{cardToEdit.title}}' />

    <label for='image' class='update-label'>Image:</label>
    <input class='update-input' id='image' name='image' type='file' />

    <label for='dateStart' class='update-label'>Start date:</label>
    <input class='update-input' id='dateStart' name='dateStart' type='date' min='2022-01-21'/>

    <label for='dateEnd' class='update-label'>End date:</label>
    <input class='update-input' id='dateEnd' name='dateEnd' type='date' min='2022-01-21'/>

    <label for='checkbox'>Permanent/ongoing</label>
    <input class='update-input' type='checkbox' id='permanent' name='permanent'>

    <label for='category' class='update-label'>Category:</label>
    <select name='category'>
        <option value='museums'>Museum</option>
        <option value='exhibitions'>Exhibition</option>
        <option value='street-art'>Street art</option>
        <option value='public-space'>Public space</option>
    </select>

    <label for='location' class='update-label'>Location:</label>
    <input class='update-input' id='location' name='location' type='text' value='{{cardToEdit.location}}' />

    <label for='address' class='update-label'>Address:</label>
    <input class='update-input' id='address' name='address' type='text' value='{{cardToEdit.address}}' />

    <label for='arrond' class='update-label'>Arrondissement:</label>
    <select name='arrond'>
        <option value='75001'>1st</option>
        <option value='75002'>2nd</option>
        <option value='75003'>3rd</option>
        <option value='75004'>4th</option>
        <option value='75005'>5th</option>
        <option value='75006'>6th</option>
        <option value='75007'>7th</option>
        <option value='75008'>8th</option>
        <option value='75009'>9th</option>
        <option value='75010'>10th</option>
        <option value='75011'>11th</option>
        <option value='75012'>12th</option>
        <option value='75013'>13th</option>
        <option value='75014'>14th</option>
        <option value='75015'>15th</option>
        <option value='75016'>16th</option>
        <option value='75017'>17th</option>
        <option value='75018'>18th</option>
        <option value='75019'>19th</option>
        <option value='75020'>20th</option>
    </select>

    <label for='websiteUrl' class='update-label'>Website:</label>
    <input class='update-input' id='websiteUrl' name='websiteUrl' type='text' value='{{cardToEdit.websiteUrl}}' />

    <label for='description' class='update-label'>Description:</label>
    <input class='update-input' id='description' name='description' type='textarea' value='{{cardToEdit.description}}' />

    <button class='update-btn'>Submit</button>
</form>
